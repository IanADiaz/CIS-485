<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
    integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
  <link rel="stylesheet" href="/style.css">
  <title>Note Subjects</title>
  <style>
    .theme-toggle-btn {
      position: fixed;
      top: 90px;
      right: 30px;
      z-index: 1000;
      border-radius: 8px;
    }
  </style>
</head>

<body class="subjectsBody">
  <nav>
    <h4>CIS485 Final Project</h4>
    <ul>
      <li><a href="/">Home</a></li>
      <li><a href="/profile">Profile</a></li>
      <li><a href="/auth/logout">Logout</a></li>
    </ul>
  </nav>
  <button id="modeToggle" class="btn btn-secondary theme-toggle-btn">Toggle Theme</button>


  <div class="container text-center">
    <div class="row row-cols-2">
      <div class="col"><a href="/notesController/displayNotes/Web Programming" class="subjectButtons">Web
          Programming</a></div>
      <div class="col"><a href="/notesController/displayNotes/Computer Science" class="subjectButtons">Computer
          Science</a></div>
      <div class="col"><a href="/notesController/displayNotes/Database Systems" class="subjectButtons">Database
          Systems</a></div>
      <div class="col"><a href="/notesController/displayNotes/Telecommunications"
          class="subjectButtons">Telecommunications</a></div>
    </div>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const toggleBtn = document.getElementById('modeToggle');
      const currentMode = localStorage.getItem('mode');

      if (currentMode === 'light') {
        document.body.classList.add('light-mode');
      }

      toggleBtn.addEventListener('click', () => {
        document.body.classList.toggle('light-mode');
        const mode = document.body.classList.contains('light-mode') ? 'light' : 'dark';
        localStorage.setItem('mode', mode);
      });
    });
  </script>

</body>

</html>